@model List<LavacarSeLoChaneoADomicilio.Models.Cliente>

@{
	ViewData["Title"] = "Clientes";
}

<h2>Clientes</h2>

<a class="btn btn-primary mb-3" asp-action="Create">Agregar Cliente</a>
<form asp-action="Index" method="get" class="mb-3 row g-2 justify-content-end">
	<div class="col-auto">
		<input type="text" name="busqueda" class="form-control" placeholder="Buscar cliente..."
			   value="@ViewBag.Busqueda" />
	</div>
	<div class="col-auto">
		<button type="submit" class="btn btn-outline-secondary">Buscar</button>
	</div>
</form>

<table class="table table-bordered">
	<thead>
		<tr>
			<th>Identificación</th>
			<th>Nombre</th>
			<th>Provincia</th>
			<th>Cantón</th>
			<th>Distrito</th>
			<th>Teléfono</th>
			<th>Preferencia Lavado</th>
			<th>Acciones</th>
		</tr>
	</thead>
	<tbody>
		@foreach (var c in Model)
		{
			<tr>
				<td>@c.Identificacion</td>
				<td>@c.NombreCompleto</td>
				<td>@c.Provincia</td>
				<td>@c.Canton</td>
				<td>@c.Distrito</td>
				<td>@c.Telefono</td>
				<td>@c.PreferenciaLavado</td>
				<td>
					<a class="btn btn-info btn-sm" asp-action="Details" asp-route-identificacion="@c.Identificacion">Ver</a>
					<a class="btn btn-warning btn-sm" asp-action="Edit" asp-route-identificacion="@c.Identificacion">Editar</a>
					<a class="btn btn-danger btn-sm" asp-action="Delete" asp-route-identificacion="@c.Identificacion">Eliminar</a>
				</td>
			</tr>
		}
	</tbody>
</table>
