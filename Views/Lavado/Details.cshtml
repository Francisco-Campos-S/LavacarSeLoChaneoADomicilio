@model LavacarSeLoChaneoADomicilio.Models.Lavado

@{
	ViewData["Title"] = "Detalles del Lavado";
}

<h2>Detalles del Lavado</h2>

<table class="table table-bordered">
	<tr><th>ID</th><td>@Model.Id</td></tr>
	<tr><th>Placa</th><td>@Model.PlacaVehiculo</td></tr>
	<tr><th>Cliente</th><td>@Model.IdCliente</td></tr>
	<tr><th>Empleado</th><td>@Model.IdEmpleado</td></tr>
	<tr><th>Tipo</th><td>@Model.Tipo</td></tr>
	<tr><th>Estado</th><td>@Model.Estado</td></tr>
	<tr><th>Precio</th><td>@Model.Precio.ToString("C")</td></tr>
	<tr><th>IVA (13%)</th><td>@Model.IVA.ToString("C")</td></tr>
	<tr><th>Total</th><td>@Model.Total.ToString("C")</td></tr>
</table>

<a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning">Editar</a>
<a asp-action="Index" class="btn btn-secondary">Volver</a>
