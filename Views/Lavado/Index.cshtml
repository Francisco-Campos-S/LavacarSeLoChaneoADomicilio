@model List<LavacarSeLoChaneoADomicilio.Models.Lavado>

@{
    ViewData["Title"] = "Lavados";
}

<h2>Lavados Registrados</h2>

<a class="btn btn-primary mb-3" asp-action="Create">Registrar Lavado</a>
<form asp-action="Index" method="get" class="mb-3 row g-2 justify-content-end">
    <div class="col-auto">
        <input type="text" name="busqueda" class="form-control" placeholder="Buscar lavado..."
               value="@ViewBag.Busqueda" />
    </div>
    <div class="col-auto">
        <button type="submit" class="btn btn-outline-secondary">Buscar</button>
    </div>
</form>

<table class="table table-bordered">
    <thead>
        <tr>
            <th>ID</th>
            <th>Placa</th>
            <th>Cliente</th>
            <th>Empleado</th>
            <th>Tipo</th>
            <th>Precio</th>
            <th>IVA</th>
            <th>Total</th>
            <th>Estado</th>
            <th>Acciones</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var l in Model)
        {
            <tr>
                <td>@l.Id</td>
                <td>@l.PlacaVehiculo</td>
                <td>@l.IdCliente</td>
                <td>@l.IdEmpleado</td>
                <td>@l.Tipo</td>
                <td>@l.Precio.ToString("C")</td>
                <td>@l.IVA.ToString("C")</td>
                <td>@l.Total.ToString("C")</td>
                <td>@l.Estado</td>
                <td>
                    <a class="btn btn-info btn-sm" asp-action="Details" asp-route-id="@l.Id">Ver</a>
                    <a class="btn btn-warning btn-sm" asp-action="Edit" asp-route-id="@l.Id">Editar</a>
                    <a class="btn btn-danger btn-sm" asp-action="Delete" asp-route-id="@l.Id">Eliminar</a>
                </td>
            </tr>
        }
    </tbody>
</table>
