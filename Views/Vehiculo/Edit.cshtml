@model LavacarSeLoChaneoADomicilio.Models.Vehiculo

@{
	ViewData["Title"] = "Editar Vehículo";
}

<h2>Editar Vehículo</h2>

<form asp-action="Edit" method="post">
	<input type="hidden" name="placaOriginal" value="@Model.Placa" />

	<div class="mb-3">
		<label>Placa</label>
		<input asp-for="Placa" class="form-control" required />
	</div>
	<div class="mb-3">
		<label>Marca</label>
		<input asp-for="Marca" class="form-control" required />
	</div>
	<div class="mb-3">
		<label>Modelo</label>
		<input asp-for="Modelo" class="form-control" required />
	</div>
	<div class="mb-3">
		<label>Tracción</label>
		<input asp-for="Traccion" class="form-control" required />
	</div>
	<div class="mb-3">
		<label>Color</label>
		<input asp-for="Color" class="form-control" required />
	</div>
	<div class="mb-3">
		<label>Última Fecha de Atención</label>
		<input asp-for="UltimaFechaAtencion" type="date" class="form-control" />
	</div>
	<div class="form-check mb-3">
		<input asp-for="TratamientoNanoCeramico" class="form-check-input" type="checkbox" />
		<label class="form-check-label">Tratamiento NanoCerámico</label>
	</div>
	<button type="submit" class="btn btn-primary">Actualizar</button>
	<a asp-action="Index" class="btn btn-secondary">Cancelar</a>
</form>
