@model List<LavacarSeLoChaneoADomicilio.Models.Vehiculo>

@{
	ViewData["Title"] = "Vehículos";
}

<h2>Vehículos Atendidos</h2>

<a class="btn btn-primary mb-3" asp-action="Create">Agregar Vehículo</a>
<form asp-action="Index" method="get" class="mb-3 row g-2 justify-content-end">
	<div class="col-auto">
		<input type="text" name="busqueda" class="form-control" placeholder="Buscar vehículo..."
			   value="@ViewBag.Busqueda" />
	</div>
	<div class="col-auto">
		<button type="submit" class="btn btn-outline-secondary">Buscar</button>
	</div>
</form>

<table class="table table-bordered">
	<thead>
		<tr>
			<th>Placa</th>
			<th>Marca</th>
			<th>Modelo</th>
			<th>Tracción</th>
			<th>Color</th>
			<th>Última Atención</th>
			<th>NanoCerámico</th>
			<th>Acciones</th>
		</tr>
	</thead>
	<tbody>
		@foreach (var v in Model)
		{
			<tr>
				<td>@v.Placa</td>
				<td>@v.Marca</td>
				<td>@v.Modelo</td>
				<td>@v.Traccion</td>
				<td>@v.Color</td>
				<td>@(v.UltimaFechaAtencion?.ToString("dd/MM/yyyy") ?? "-")</td>
				<td>@(v.TratamientoNanoCeramico ? "Sí" : "No")</td>
				<td>
					<a class="btn btn-info btn-sm" asp-action="Details" asp-route-placa="@v.Placa">Ver</a>
					<a class="btn btn-warning btn-sm" asp-action="Edit" asp-route-placa="@v.Placa">Editar</a>
					<a class="btn btn-danger btn-sm" asp-action="Delete" asp-route-placa="@v.Placa">Eliminar</a>
				</td>
			</tr>
		}
	</tbody>
</table>
